{
  "name": "fail-kit-vscode",
  "displayName": "F.A.I.L. Kit",
  "description": "Forensic Audit of Intelligent Logic - Real-time static analysis for AI agent code",
  "version": "0.1.0",
  "publisher": "fail-kit",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Linters",
    "Programming Languages"
  ],
  "keywords": [
    "ai",
    "agent",
    "audit",
    "langchain",
    "openai",
    "llm",
    "security"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:javascript",
    "onLanguage:typescriptreact",
    "onLanguage:javascriptreact"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fail-kit.analyzeFile",
        "title": "F.A.I.L. Kit: Analyze Current File"
      },
      {
        "command": "fail-kit.analyzeWorkspace",
        "title": "F.A.I.L. Kit: Analyze Workspace"
      }
    ],
    "configuration": {
      "title": "F.A.I.L. Kit",
      "properties": {
        "fail-kit.enableRealTimeAnalysis": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time analysis as you type"
        },
        "fail-kit.severity.missingReceipt": {
          "type": "string",
          "enum": ["error", "warning", "info", "hint"],
          "default": "warning",
          "description": "Severity level for missing receipt warnings"
        },
        "fail-kit.severity.missingErrorHandling": {
          "type": "string",
          "enum": ["error", "warning", "info", "hint"],
          "default": "warning",
          "description": "Severity level for missing error handling warnings"
        },
        "fail-kit.excludePatterns": {
          "type": "array",
          "items": { "type": "string" },
          "default": ["**/node_modules/**", "**/*.test.ts", "**/*.spec.ts"],
          "description": "Glob patterns for files to exclude from analysis"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/resetroot99/The-FAIL-Kit.git"
  },
  "license": "Commercial"
}
